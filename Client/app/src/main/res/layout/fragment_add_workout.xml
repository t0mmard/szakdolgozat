<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_addworkout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    tools:context=".view.mainactivity.fragments.workouts.AddWorkoutFragment">

    <TextView
        android:id="@+id/tv_addworkout_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:lines="1"
        android:text="@string/add_workout_question"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/et_addworkout_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_addworkout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:hint="@string/new_workout_hint"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_addworkout_addworkout"
        android:layout_width="0dp"
        android:layout_height="91dp"
        android:background="@drawable/add_button_selector"
        android:text="@string/next"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_addworkout_name"
        app:layout_constraintVertical_bias="0.936" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_addworkout_emptyworkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:checked="true"
        android:text="@string/empty_workout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_addworkout_name" />

    <TextView
        android:id="@+id/tv_addworkout_workoutplanquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="@string/add_workout_plan_question"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_addworkout_emptyworkout" />
    <RelativeLayout
        android:id="@+id/rl_addworkout_spinnerlayout"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/tv_addworkout_workoutplanquestion"
        tools:layout_editor_absoluteX="10dp"
        android:background="@drawable/black_border">

        <Spinner
            android:id="@+id/sp_addworkout_workoutplan"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>