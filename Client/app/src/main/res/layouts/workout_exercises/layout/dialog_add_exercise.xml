<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/exercise_name"/>

    <EditText
        android:id="@+id/et_addexercise_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_exercise_hint"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/exercise_type"/>

    <Spinner
        android:id="@+id/sp_addexercise_types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/exercise_category"/>

    <Spinner
        android:id="@+id/sp_addexercise_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>