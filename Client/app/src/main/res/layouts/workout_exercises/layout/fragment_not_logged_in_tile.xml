<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_not_loggedin"
    android:layout_width="match_parent"
    android:layout_height="200sp"
    tools:context=".view.mainactivity.fragments.profile.login.NotLoggedInTileFragment"
    android:background="@drawable/menu_items_background">

    <TextView
        android:id="@+id/tv_notloggedin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/not_logged_in"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_notloggedin_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_question"
        android:textColor="@color/ash_blonde"
        app:layout_constraintBottom_toTopOf="@+id/btn_notloggedin_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_notloggedin_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/periwinkle_trans"
        android:text="@string/login"
        android:textColor="@color/ash_blonde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_notloggedin_register"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_notloggedin_register"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/periwinkle_trans"
        android:text="@string/register"
        android:textColor="@color/oxford"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>