<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.mainactivity.fragments.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bnv_profile_navmenu"
        app:layout_constraintTop_toTopOf="parent"
        android:overScrollMode="always">

        <LinearLayout
            android:id="@+id/fl_profile_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/bnv_profile_navmenu"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/fragment_profile_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp" />

            <FrameLayout
                android:id="@+id/fragment_profile_measurements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp" />

            <FrameLayout
                android:id="@+id/fragment_profile_coach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bnv_profile_navmenu"
    android:layout_width="match_parent"
    android:layout_height="75sp"
    app:menu="@menu/bottom_nav_menu"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>